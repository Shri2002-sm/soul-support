  <body>
    <!-- HEADER -->

    <header class="header">
      <!--  Nav Bar -->

      <nav class="navbar">
        <a href="home">Home</a>
        <a href="quotes">Quotes</a>
      </nav>

      <!-- form -->

      <!-- <form action="#" class="search-bar">
        <input type="text" placeholder="search" />
